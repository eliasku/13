{
  "name": "iioi",
  "version": "0.0.1",
  "private": true,
  "description": "js13k game with p2p realtime multiplayer",
  "type": "module",
  "scripts": {
    "start": "ts-node --esm --swc packages/tools/src/watch.ts",
    "build": "ts-node --esm --swc packages/tools/src/build.ts",
    "clean": "ts-node --esm --swc packages/tools/src/clean.ts",
    "upload-poki": "ts-node --esm --swc packages/tools/src/upload-poki.ts",
    "typecheck": "tsc -b --clean && tsc -b -v --diagnostics",
    "lint": "eslint packages/*/src/ --ext .ts",
    "prettier": "prettier --write \"packages/*/{src/**/*.ts,*.json}\"",
    "release": "npm run build && changeset publish",
    "version": "changeset version && npm install && git add package-lock.json"
  },
  "author": "Ilya Kuzmichev <eliasku.games@gmail.com> (https://eliasku-games.web.app)",
  "license": "ISC",
  "workspaces": [
    "./packages/*"
  ],
  "poki": {
    "game_id": "fefa3d7b-e795-49d0-90a0-d6fa8659e41c",
    "build_dir": "build/poki"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@poki/cli": "^0.1.12",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@swc/core": "^1.3.34",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "esbuild": "^0.17.6",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "html-minifier": "^4.0.0",
    "prettier": "2.8.3",
    "rollup": "^3.14.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "terser": "^5.16.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "overrides": {
    "@rollup/pluginutils": "^5.0.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "prettier"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "trailingComma": "all",
    "useTabs": false,
    "arrowParens": "avoid",
    "bracketSpacing": false
  }
}
